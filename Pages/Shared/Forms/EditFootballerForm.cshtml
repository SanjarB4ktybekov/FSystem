@page "{id}"
@model EditFootballerFormModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">На этой странице вы можете добавить нового игрока</h1>

    <form asp-page="AddFootballerFormModel">
    <div class="form-group">
        <label asp-for="Player.LastName">Фамилия</label>
        <input asp-for="Player.LastName" class="form-control" placeholder="Введите фамилию">
        <span asp-validation-for="Player.LastName" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Player.FirstName">Имя</label>
        <input asp-for="Player.FirstName" class="form-control" placeholder="Введите имя">
        <span asp-validation-for="Player.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label asp-for="Player.Age">Возраст</label>
        <input asp-for="Player.Age" class="form-control" placeholder="Введите возраст">
        <span asp-validation-for="Player.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.Salary">Зарплата</label>
        <input asp-for="Player.Salary" class="form-control" placeholder="Введите зарплату">
        <span asp-validation-for="Player.Salary" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Player.Position">Позиция</label>
        <input asp-for="Player.Position" class="form-control" placeholder="Введите позицию">
        <span asp-validation-for="Player.Position" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Редактировать</button>
    </form>
</div>
