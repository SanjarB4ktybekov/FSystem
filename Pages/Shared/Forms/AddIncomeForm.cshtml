@page "/AddIncome"
@model AddIncomeForm
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">На этой странице вы можете добавить нового игрока</h1>

    <form asp-page="AddFootballForm">
    <div class="form-group">
        <label asp-for="Income.Source">Источник</label>
        <input asp-for="Income.Source" class="form-control" placeholder="Введите источник дохода">
        <span asp-validation-for="Income.Source" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Income.Sum">Сумма</label>
        <input asp-for="Income.Sum" class="form-control" placeholder="Введите сумму">
        <span asp-validation-for="Income.Sum" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label asp-for="Income.DateOfOperation">Дата</label>
        <input asp-for="Income.DateOfOperation" class="form-control" placeholder="Введите дату операции">
        <span asp-validation-for="Income.DateOfOperation" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>
