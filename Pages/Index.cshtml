@page "{id?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Домашняя страница</h1>
    <a href="/Schedule"  type="button" class="btn btn-primary">Посмотреть расписание</a>
    <h2>Баланс клуба: @Model.balance</h2>
    
    @if(Model.coach != null)
    {
        <h4>Тренер: @Model.coach.LastName @Model.coach.FirstName</h4>
    } else 
    {
        <h4>Тренер еще не обьявлен</h4>
    }
    <h3>Список игроков</h3>

    @if(Model.players.Any())
    {
        <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Имя</th>
      <th scope="col">Возраст</th>
      <th scope="col">Позиция</th>
      <th scope="col">Зарплата</th>
      <th scope="col">Редактировать</th>
      <th scope="col">Удалить</th>

    </tr>
  </thead>
  <tbody>
      @foreach (var item in @Model.players)
      {
        <tr>
            <th scope="row">@item.PlayerId</th>
            <td>@item.LastName @item.FirstName</td>
            <td>@item.Age</td>
            <td>@item.Position</td>
            <td>@item.Salary</td>
            <td><a asp-page="Shared/Forms/EditFootballerForm" asp-route-id="@item.PlayerId"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg></a></td>
            <td> <form asp-page="Index"><button asp-route-id="@item.PlayerId">  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-x" viewBox="0 0 16 16">
  <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm.256 7a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z"/>
  <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-.646-4.854.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 0 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 .708-.708Z"/>
</svg> </button></form> </td>
        </tr>
      }
  </tbody>
</table>
    } else {
        <div>Игроков нет</div>
    }
    <a href="/Privacy"  type="button" class="btn btn-danger">Выход</a>
</div>
